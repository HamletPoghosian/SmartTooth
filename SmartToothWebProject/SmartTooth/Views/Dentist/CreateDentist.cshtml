@model Dentist
@{
    ViewData["Title"] = "CreateDentist";
}


<h2>CreateDentist</h2>

<div>
    <form asp-action="CreateDentist" method="post">
        <input asp-for="Name" type="text" name="name" />
        <input asp-for="LastName" type="text" name="LastName" />
        <input asp-for="Description" type="text" name="Description" />
        <input asp-for="Specialization" type="text" name="Specialization" />
        <input asp-for="Number" type="tel" pattern="[0-9]{3}-[0-9]{2}-[0-9]{2}-[0-9]{2}" name="Number" />
        <span>Format: 077-11-11-11</span>
        <input asp-for="FacebookUrl" type="url" name="FacebookUrl" />
        <input type="submit" name="FacebookUrl" />
    </form>
</div>